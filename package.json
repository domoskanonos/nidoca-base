{
  "name": "@domoskanonos/nidoca-base",
  "version": "1.0.4",
  "license": "MIT",
  "keywords": [
    "basic typescript / webcomponent project"
  ],
  "description": "nidoca framework (nidoca-core)",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "module": "./src/index.js",
  "scripts": {
    "check-updates": "ncu",
    "upgrade": "ncu -u",
    "start": "webpack serve --config webpack.local.js",
    "ts": "tsc -p ./",
    "prettier-check": "npx prettier --check \"./**/*.{ts,json,js,html}\"",
    "prettier-write": "npx prettier --write \"./**/*.{ts,json,js,html}\"",
    "eslint": "eslint src",
    "eslint:fix": "eslint src --fix",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage --passWithNoTests",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch --passWithNoTests",
    "typedoc": "typedoc",
    "lit-analyzer": "lit-analyzer \"src/**/*.{js,ts}\"",
    "cc": "custom-elements-manifest analyze",
    "docs-webcomponents": "wca analyze \"src/**/*.{js,ts}\" --outDir public/webcomponents/wc-docs",
    "docs:watch": "typedoc --watch",
    "docs": "npm run lit-analyzer && npm run cc && npm run docs-webcomponents && npm run typedoc",
    "build": "npm i && npm run ts && npm run prettier-check && npm run eslint &&  npm run lit-analyzer && npm run test && npm run docs",
    "preversion": "npm run build"
  },
  "devDependencies": {},
  "dependencies": {
    "@custom-elements-manifest/analyzer": "0.5.7",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@open-wc/testing": "3.1.2",
    "@types/jest": "27.4.1",
    "jest-css-modules-transform": "4.3.0",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "copy-webpack-plugin": "10.2.4",
    "prettier": "2.7.1",
    "eslint": "8.13.0",
    "eslint-plugin-tsdoc": "0.2.16",
    "file-replace-loader": "1.4.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "27.5.1",
    "lit": "2.2.2",
    "lit-analyzer": "1.2.1",
    "npm-check-updates": "12.5.9",
    "postcss": "8.4.12",
    "raw-loader": "4.0.2",
    "sass": "1.50.0",
    "sass-loader": "12.6.0",
    "string-replace-loader": "3.1.0",
    "terser-webpack-plugin": "5.3.1",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "typedoc": "0.22.15",
    "typescript": "4.6.3",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.2"
  },
  "author": "Dominik Bruhn"
}
