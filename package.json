{
  "name": "@domoskanonos/nidoca-base",
  "version": "1.0.8",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "basic typescript / webcomponent project"
  ],
  "description": "nidoca framework (nidoca-core)",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "module": "./src/index.js",
  "scripts": {
    "check-updates": "ncu",
    "upgrade": "ncu -u",
    "start": "webpack serve --config webpack.local.js",
    "ts": "tsc -p ./",
    "prettier-check": "npx prettier --check \"./**/*.{ts,json,js,html}\"",
    "prettier-fix": "npx prettier --write \"./**/*.{ts,json,js,html}\"",
    "eslint": "eslint src",
    "eslint:fix": "eslint src --fix",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage --passWithNoTests",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch --passWithNoTests",
    "typedoc": "typedoc",
    "lit-analyzer": "lit-analyzer \"src/**/*.{js,ts}\"",
    "cc": "custom-elements-manifest analyze",
    "docs-webcomponents": "wca analyze \"src/**/*.{js,ts}\" --outDir public/webcomponents/wc-docs",
    "docs:watch": "typedoc --watch",
    "docs": "npm run lit-analyzer && npm run cc && npm run docs-webcomponents && npm run typedoc",
    "build-frontend": "webpack --config ./webpack.js",
    "build": "npm i && npm run ts && npm run prettier-check && npm run eslint &&  npm run lit-analyzer && npm run test && npm run docs && npm run build-frontend"
  },
  "devDependencies": {},
  "dependencies": {
    "@custom-elements-manifest/analyzer": "0.6.3",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@open-wc/testing": "3.1.6",
    "@types/jest": "28.1.4",
    "jest-css-modules-transform": "4.4.2",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "copy-webpack-plugin": "11.0.0",
    "prettier": "2.7.1",
    "eslint": "8.19.0",
    "eslint-plugin-tsdoc": "0.2.16",
    "file-replace-loader": "1.4.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "28.1.2",
    "jest-environment-jsdom": "28.1.2",
    "lit": "2.2.7",
    "lit-analyzer": "1.2.1",
    "npm-check-updates": "15.0.3",
    "postcss": "8.4.14",
    "raw-loader": "4.0.2",
    "sass": "1.53.0",
    "sass-loader": "13.0.2",
    "string-replace-loader": "3.1.0",
    "terser-webpack-plugin": "5.3.3",
    "ts-jest": "28.0.5",
    "ts-loader": "9.3.1",
    "typedoc": "0.23.5",
    "typescript": "4.7.4",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.3"
  },
  "author": "Dominik Bruhn"
}
